[user]
	name = Northern Bites
	email = northernbites@gmail.com
[core]
	editor = emacs -nw
	excludesfile = ~/.gitignore_global
[difftool "opendiff"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "opendiff"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[diff]
	tool = opendiff
[merge]
	tool = opendiff
[push]
        default = tracking

[color]
	diff = true
	interactive = true
	status = true
[alias]
    co = checkout
    st = status
    br = branch
    rb = rebase
    lsd = log --graph --decorate --pretty=oneline --abbrev-commit --all
    amend = !sh -c 'git commit -a --amend && git push -f origin `git rev-parse --abbrev-ref HEAD`'
    remind = !sh -c 'git diff-tree --no-commit-id --name-only -r HEAD | more'
    reopen = !sh -c "true && subl $(pwd) $(git diff-tree --no-commit-id --name-only -r HEAD | cat | tr '\n' ' ' | more)"
